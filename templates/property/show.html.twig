{% extends 'base.html.twig' %}
{% block title  property.title %}

{% block body %}
    <div class="container mt-4">
    <div class="jumbotron">
        <div class="col-md-4">
            <h1>{{ property.title }}</h1>
            <h2>{{ property.rooms }} pièces. {{ property.surface }} m2</h2>
            <div class="text-primary" style="font-size: 4rem; font-weight: bold">{{ property.formatedPrice }}</div>
            <a href="#" class="btn btn-primary">Contacter l'equipe</a>
        </div>
    </div>
        <div class="row">
            <div class="col-md-8">

            </div>

        </div>
        <nav class="nav nav-tabs" id="tabs"></nav>
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    <tr>
                        <th>Description</th>
                    </tr>
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.surface }} m2</td>
                    </tr>
                    <tr>
                        <td>Pièces</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Etages</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>type chauffage</td>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Specificités</h2>
            </div>
        </div>
    </div>

{% endblock %}